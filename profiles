	luci \
	luci-ssl \
	nano \
	htop \
	diffutils \
	tar \
	iperf3 \
	bash \
	rsync \
	luci-app-statistics \
	luci-app-attendedsysupgrade \
	collectd-mod-sensors \
	collectd-mod-thermal \
	collectd-mod-conntrack \
	collectd-mod-cpu"

